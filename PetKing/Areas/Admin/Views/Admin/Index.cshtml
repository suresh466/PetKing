@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container mt-4">
    <h2 class="mb-4">Admin Dashboard</h2>
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-primary">
                <div class="card-body">
                    <h5 class="card-title">Products Management</h5>
                    <p class="card-text">Manage your product inventory, add new products, update existing ones, and control your stock.</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item text-center">Total Products: <span class="badge badge-primary">@ViewBag.TotalProducts</span></li>
                    </ul>
                    <a asp-area="Admin" asp-controller="Admin" asp-action="Products" class="btn btn-primary btn-block">
                        <i class="fas fa-box-open mr-2"></i>Manage Products
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-success">
                <div class="card-body">
                    <h5 class="card-title">Orders Management</h5>
                    <p class="card-text">View and manage customer orders, update order statuses, and process shipments.</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item text-center">Total Orders: <span class="badge badge-success">@ViewBag.NewOrders</span></li>
                    </ul>
                    <a asp-area="Admin" asp-controller="Admin" asp-action="Orders" class="btn btn-success btn-block">
                        <i class="fas fa-shopping-cart mr-2"></i>Manage Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>