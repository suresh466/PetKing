@model List<PetKing.Models.Order>

<h2>Order Management</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <form asp-area="Admin" asp-controller="Admin" asp-action="UpdateOrderStatus" method="post">
                        <input type="hidden" name="orderId" value="@order.OrderID" />
                        <select name="status" class="form-control" onchange="this.form.submit()">
                            @foreach (var status in new List<string> { "PLACED", "SHIPPED", "DELIVERED" })
                            {
                                <option value="@status" selected="@(order.Status == status ? "selected" : null)">@status</option>
                            }
                        </select>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
