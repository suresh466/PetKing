@model PetKing.Models.Product

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageURL" class="img-fluid" alt="@Model.Name">
    </div>
    <div class="col-md-8">
        <p><strong>Category: </strong>@Model.Category.Name</p>
        <p><strong>Description: </strong>@Model.Description</p>
        <p><strong>Price: </strong>@Model.Price.ToString("C")</p>
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.ProductID" />
                <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 70px; display: inline-block;" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        }
        else
        {
            <form asp-controller="Cart" asp-action="AddToCartGuest" method="post">
                <input type="hidden" name="productId" value="@Model.ProductID" />
                <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 70px; display: inline-block;" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        }
    </div>
</div>