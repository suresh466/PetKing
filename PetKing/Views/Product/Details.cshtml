@model PetKing.Models.Product

<div class="row">
    <div class="col-md-6 mb-4">
        <img src="@Model.ImageURL" class="img-fluid rounded" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <h2 class="mb-3">@Model.Name</h2>
        <p><strong>Category: </strong>@Model.Category.Name</p>
        <p><strong>Description: </strong>@Model.Description</p>
        <p><strong>Price: </strong>@Model.Price.ToString("C")</p>
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-3">
                <input type="hidden" name="productId" value="@Model.ProductID" />
                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="number" name="quantity" id="quantity" value="1" min="1" class="form-control" style="max-width: 100px;" />
                </div>
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login to Add to Cart</a>
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>