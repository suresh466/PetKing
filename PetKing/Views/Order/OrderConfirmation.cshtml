@model PetKing.Models.Order

<div class="container mt-5">
    <div class="card border-0 shadow">
        <div class="card-body p-5">
            <h2 class="card-title text-center mb-4">Order Confirmation</h2>
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-3">Order Details</h4>
                    <p><strong>Order Number:</strong> #@Model.OrderID</p>
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy HH:mm")</p>
                    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
                </div>
                <div class="col-md-6 text-right">
                    <h4 class="mb-3">Shipping Information</h4>
                    <p><strong>Name:</strong> @Model.ShippingName</p>
                    <p><strong>Address:</strong> @Model.ShippingAddress</p>
                    <p><strong>City:</strong> @Model.ShippingCity</p>
                    <p><strong>Postal Code:</strong> @Model.ShippingPostalCode</p>
                </div>
            </div>
            <div class="mt-4">
                <h4 class="mb-3">Order Items</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>@((item.Quantity * item.Price).ToString("C"))</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-right"><strong>Total:</strong></td>
                                <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>